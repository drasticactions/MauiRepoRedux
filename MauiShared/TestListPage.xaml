<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:virtualizeListView="clr-namespace:MPowerKit.VirtualizeListView;assembly=MPowerKit.VirtualizeListView"
             x:Class="MauiShared.TestListPage">
    <ContentPage.Content>
        <virtualizeListView:VirtualizeListView ItemsSource="{x:Bind ViewModel.Items, IsItemsSource=True}">
            <virtualizeListView:VirtualizeListView.ItemTemplate>
                <DataTemplate>
                    <virtualizeListView:VirtualizeListViewCell BackgroundColor="{x:Bind BackgroundColor}">
                        <Grid HeightRequest="{x:Bind Height}">
                            <Label FontSize="15" VerticalOptions="Center" HorizontalOptions="Center" Text="{x:Bind Title}"/>
                        </Grid>
                    </virtualizeListView:VirtualizeListViewCell>
                </DataTemplate>
            </virtualizeListView:VirtualizeListView.ItemTemplate>
        </virtualizeListView:VirtualizeListView>
    </ContentPage.Content>
</ContentPage>